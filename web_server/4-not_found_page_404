#!/usr/bin/env bash

# This script configures Nginx to use a custom 404 page that contains "Ceci n'est pas une page"

# Backup the original configuration file
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Create the custom 404 page
sudo bash -c 'cat > /var/www/html/404.html <<EOF
<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <h1>Ceci n'est pas une page</h1>
</body>
</html>
EOF'

# Configure Nginx
sudo bash -c 'cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80;
    server_name localhost;

    # Root directory and default index
    root /var/www/html;
    index index.html;

    # Custom 404 page configuration
    error_page 404 /404.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location = /404.html {
        internal;
    }
}
EOF'

# Test Nginx configuration for syntax errors
sudo nginx -t

# Reload Nginx to apply changes
sudo nginx -s reload

