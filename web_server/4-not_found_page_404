#!/usr/bin/env bash
# Script that configures a new Ubuntu machine with the following requirements:

# Update package list and install Nginx
sudo apt-get update
sudo apt-get -y install nginx

# Allow Nginx HTTP traffic through the firewall
sudo ufw allow 'Nginx HTTP'

# Create the index.html file with a welcome message
echo "This is Isaac from Holberton School :)" | sudo tee /var/www/html/index.html > /dev/null

# Create a custom 404 error page
sudo bash -c 'cat > /var/www/html/404.html <<EOF
<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <h1>Ceci n'est pas une page</h1>
</body>
</html>
EOF'

# Configure Nginx to handle the redirection and custom 404 page
sudo bash -c 'cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80;
    server_name _;

    root /var/www/html;
    index index.html;

    # Redirect /redirect_me to an external URL with a 301 status
    location /redirect_me {
        return 301 https://www.github.com/missmbuvi04;
    }

    # Custom 404 page configuration
    error_page 404 /404.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location = /404.html {
        internal;
    }
}
EOF'

# Test the Nginx configuration
sudo nginx -t

# Reload Nginx to apply changes
sudo service nginx reload

